<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="24dp"
              android:layout_marginRight="24dp"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_radius10_ffffff"
        android:orientation="vertical">

        <cn.fengrong.blinddate.ui.recharge.widget.tablayout.SlidingTabLayout
            android:id="@+id/dil_tablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            app:tl_indicator_color="@color/cf95b84"
            app:tl_indicator_corner_radius="3dp"
            app:tl_indicator_height="3dp"
            app:tl_tab_padding="0dp"
            app:tl_tab_space_equal="false"
            app:tl_textSelectColor="@color/c333333"
            app:tl_textUnselectColor="@color/c999999"
            app:tl_textsize="15dp"/>
        <!--必须将ViewPager的高度写死-->
        <cn.fengrong.blinddate.ui.dialog.ui.AutoHeightViewPager
            android:id="@+id/dil_viewpager"
            android:layout_width="match_parent"
            android:layout_height="406dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/dgal_close"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="34dp"
        android:src="@drawable/icon_close_white"/>
</LinearLayout>